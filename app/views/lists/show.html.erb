<div class="container mt-3">
  <h2><%= @list.name %> List</h2>
  <% @bookmarks.each do |bookmark| %>
    <div class="card-list mt-3">
      <h3><%= bookmark.movie.title %></h3>
      <p><%= bookmark.comment %></p>
      <%= link_to bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Destroy this bookmark?"} do %>
        <i class="fa-solid fa-trash"></i>
      <% end %>
    </div>
  <% end %>
  <div class="mt-3">
    <%= link_to 'Add Bookmark', new_list_bookmark_path(@list), class: 'btn btn-primary'%>
    <%= link_to lists_path, class: 'btn btn-primary' do %>
      <i class="fa-solid fa-angles-left"></i>
    <% end %>
  </div>


</div>
